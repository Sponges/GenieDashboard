{{> header.mustache}}
<div class="row">
    <div class="col s12">
        <ul class="collection">
            <li class="collection-item center-align">
                Already have an account? <a href="/login">Login</a> to your existing account.
            </li>
        </ul>
    </div>
</div>
<div class="row">
    <form class="col s12" action="/confirm_login" method="POST">
        <div class="row">
            <div class="input-field col s12">
                <input class="validate" id="email" type="email" name="email">
                <label for="email">Email Address</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input class="validate" id="password" type="password" name="password">
                <label for="password">Password</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input class="validate" id="password2" type="password" name="password">
                <label for="password2">Password</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <button class="btn waves-effect waves-light" type="submit">
                    Submit <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    </form>
</div>
{{> footer.mustache}}